{
	"compilerOptions": {
		"target": "es2022",
		"module": "ES2022",
		"strict": true,
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"inlineSourceMap": true,
		"baseUrl": ".",
		"outDir": "./lib/esm",
		"isolatedModules": true,
		"declaration": true,
		"declarationMap": true,
		"lib": ["esnext", "DOM"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true
	},
	"include": ["src/**/*.ts", "docs/**/*.ts", "docs/**/*.vue"],
	"exclude": ["node_modules", "src/**/*.test.ts"]
}
